<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="jadeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/jadePink</item>
        <item name="colorPrimaryDark">@color/jadeTeal</item>
        <item name="colorAccent">@color/jadeAccent</item>
    </style>

    <style name="jadeSplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/jadesplashscreen</item>
        <item name="colorPrimary">@color/jadePink</item>
        <item name="colorPrimaryDark">@color/jadeTeal</item>
        <item name="colorAccent">@color/jadeAccent</item>
    </style>
</resources>
